<UserControl
    x:Class="PTZControl.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PTZControl.ViewModels"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">

    <Grid Margin="0" RowDefinitions="Auto,Auto,Auto,*">

        <!--  Connection Bar - Top Center  -->
        <Border
            Grid.Row="0"
            Margin="0,10,0,10"
            Padding="125,20"
            HorizontalAlignment="Center"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            BoxShadow="0 4 20 0 #20000000"
            CornerRadius="12">

            <StackPanel
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="20">

                <!--  IP Address  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="IP Address:" />
                <TextBox
                    Width="170"
                    Height="38"
                    Padding="12,0"
                    VerticalContentAlignment="Center"
                    Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="10"
                    FontSize="14"
                    Text="{Binding IpAddress}"
                    Watermark="192.168.1.100" />

                <!--  Port  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="Port:" />
                <TextBox
                    Width="170"
                    Height="38"
                    Padding="12,0"
                    VerticalContentAlignment="Center"
                    Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="10"
                    FontSize="14"
                    Text="{Binding TcpPort}"
                    Watermark="1470" />

                <!--  Baud Rate  -->
                <!--<TextBlock Text="Baud Rate:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <ComboBox Width="130"
                          Height="38"
                          FontSize="14"
                          ItemsSource="{Binding BaudRates}"
                          SelectedItem="{Binding SelectedBaudRate}"
                          SelectionChanged="OnValueChange"
                          PlaceholderText="9600"
                          CornerRadius="10"
                          Background="#FAFAFA"
                          BorderBrush="#CCCCCC"
                          VerticalContentAlignment="Center"
                          Padding="12,0"/>-->

                <!--<Button Content="{Binding ConnectionStatus}"
                    Width="120"
                    Height="38"
                    FontSize="14"
                    FontWeight="SemiBold"
                    CornerRadius="10"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding ConnectCommand}"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
            </Button>-->

            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="0,10,0,10"
            Padding="28,20"
            HorizontalAlignment="Center"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="12">

            <StackPanel
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="20">

                <!--  Hex String  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="HEX" />
                <TextBox
                    Width="515"
                    Height="38"
                    Padding="12,0"
                    VerticalContentAlignment="Center"
                    Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="10"
                    FontSize="14"
                    Text="{Binding HexString}" />

                <Button
                    Width="120"
                    Height="38"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    BorderThickness="0"
                    Command="{Binding SendHexCommand}"
                    Content="Send"
                    CornerRadius="10"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold" />

            </StackPanel>
        </Border>

        <!--  Full-width dark control bar â€“ exactly what you want  -->
        <Border Grid.Row="2" CornerRadius="0">

            <Grid
                HorizontalAlignment="Stretch"
                ColumnDefinitions="*, *"
                RowDefinitions="*,*,*,*,*,*">

                <!--  LEFT: PTZ Joystick (fixed width, perfectly centered)  -->
                <Border
                    Grid.Row="1"
                    Width="750"
                    Margin="20,10,0,0"
                    Padding="10,10,10,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="20">

                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*">

                        <!--  Up Arrow  -->
                        <Button
                            Name="moveUp"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            Margin="0,0,0,10"
                            HorizontalContentAlignment="Center"
                            Command="{Binding MoveUpCommand}"
                            CommandParameter="Up"
                            Content="ðŸ¢"
                            CornerRadius="10"
                            FontSize="16" />

                        <!--  Left Arrow  -->
                        <Button
                            Name="moveLeft"
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="100"
                            Height="30"
                            Margin="200,0,10,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding MoveLeftCommand}"
                            CommandParameter="Left"
                            Content="ðŸ¢€"
                            CornerRadius="10"
                            FontSize="16">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#0078D4" />
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#005A9E" />
                                </Style>
                            </Button.Styles>
                        </Button>

                        <!--  STOP (Big Red)  -->
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="100"
                            Height="40"
                            Margin="0,0,0,0"
                            Padding="0,8,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding StopMotorCommand}"
                            Content="STOP"
                            CornerRadius="10"
                            FontSize="16">
                            <Button.Styles>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#B71C1C" />
                                </Style>
                            </Button.Styles>
                        </Button>

                        <!--  Right Arrow  -->
                        <Button
                            Name="moveRight"
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="100"
                            Height="30"
                            Margin="-100,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding MoveRightCommand}"
                            CommandParameter="Right"
                            Content="ðŸ¢‚"
                            CornerRadius="10"
                            FontSize="16"
                            Tag="Right">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#0078D4" />
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#005A9E" />
                                </Style>
                            </Button.Styles>
                        </Button>

                        <!--  Down Arrow  -->
                        <Button
                            Name="moveDown"
                            Grid.Row="2"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            Margin="0,10,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding MoveDownCommand}"
                            CommandParameter="Down"
                            Content="ðŸ¢ƒ"
                            CornerRadius="10"
                            FontSize="16">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#0078D4" />
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#005A9E" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </Grid>
                </Border>

                <Border
                    Grid.Column="0"
                    Width="750"
                    Margin="20,10,0,0"
                    Padding="10,10,10,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    CornerRadius="20">

                    <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*">

                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Tilt Speed" />
                        <TextBox
                            Grid.Column="0"
                            Width="170"
                            Height="38"
                            Margin="100,0,0,0"
                            Padding="12,0"
                            VerticalContentAlignment="Center"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding TiltSpeed}" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="50,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Pan Speed" />
                        <TextBox
                            Grid.Column="1"
                            Width="170"
                            Height="38"
                            Margin="180,0,0,0"
                            Padding="12,0"
                            VerticalContentAlignment="Center"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding PanSpeed}" />
                    </Grid>
                </Border>

                <Border
                    Grid.Row="2"
                    Width="750"
                    Margin="20,10,0,0"
                    Padding="20"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="20">

                    <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*,*">

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="DTV" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="-5,-30,0,0"
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="Red"
                            Text="*zoom (28 ~ 980)" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="-30,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding ZoomDefaultDTVValue}" />

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="2"
                            Width="60"
                            Height="38"
                            Margin="-200,0,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding ZoomDTVValue}" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="3"
                            Height="35"
                            Margin="-120,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ZoomInDTVCommand}"
                            Content="Zoom In"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="4"
                            Height="35"
                            Margin="-110,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ZoomOutDTVCommand}"
                            Content="Zoom Out"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="4"
                            Height="35"
                            Margin="20,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding DTVNarrowFOVCommand}"
                            Content="Narrow FOV"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="5"
                            Height="35"
                            Margin="20,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding DTVWideFOVCommand}"
                            Content="Wide FOV"
                            CornerRadius="10" />

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="60"
                            Height="38"
                            Margin="-200,20,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding DTVAbsoluteZoomValue}" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="3"
                            Height="35"
                            Margin="-120,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding DTVAbsoluteZoomCommand}"
                            Content="Zoom"
                            CornerRadius="10" />

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="3"
                            Width="60"
                            Height="38"
                            Margin="50,20,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding FocusDTVValue}" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="4"
                            Width="100"
                            Height="35"
                            Margin="20,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding FocusDTVCommand}"
                            Content="Focus"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="5"
                            Height="35"
                            Margin="20,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding AutoFocusDTVCommand}"
                            Content="Auto Focus"
                            CornerRadius="10" />

                    </Grid>
                </Border>

                <Border
                    Grid.Row="3"
                    Width="750"
                    Margin="20,10,0,0"
                    Padding="20"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="20">

                    <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*,*,*">

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="IR" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="-5,-30,0,0"
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="Red"
                            Text="*zoom (24194 ~ 37,801)" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="-30,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding ZoomDefaultIRValue}" />

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="2"
                            Width="60"
                            Height="38"
                            Margin="-200,0,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding ZoomIRValue}" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="3"
                            Height="35"
                            Margin="-120,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ZoomInIRCommand}"
                            Content="Zoom In"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="4"
                            Height="35"
                            Margin="-110,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ZoomOutIRCommand}"
                            Content="Zoom Out"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="4"
                            Height="35"
                            Margin="20,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding IRNarrowFOVCommand}"
                            Content="Narrow FOV"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="5"
                            Height="35"
                            Margin="20,0,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding IRWideFOVCommand}"
                            Content="Wide FOV"
                            CornerRadius="10" />

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="60"
                            Height="38"
                            Margin="-200,20,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding IRAbsoluteZoomValue}" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="3"
                            Height="35"
                            Margin="-120,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding IRAbsoluteZoomCommand}"
                            Content="Zoom"
                            CornerRadius="10" />

                        <TextBox
                            Grid.Row="2"
                            Grid.Column="2"
                            Width="60"
                            Height="38"
                            Margin="-200,20,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding IRDigitalZoomValue}" />

                        <Button
                            Grid.Row="2"
                            Grid.Column="3"
                            Height="35"
                            Margin="-120,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding IRDigitalZoomCommand}"
                            Content="D-Zoom"
                            CornerRadius="10" />

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="3"
                            Width="60"
                            Height="38"
                            Margin="50,20,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="10"
                            FontSize="14"
                            Text="{Binding FocusIRValue}" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="4"
                            Width="100"
                            Height="35"
                            Margin="20,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding FocusIRCommand}"
                            Content="Focus"
                            CornerRadius="10" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="5"
                            Height="35"
                            Margin="20,20,0,0"
                            HorizontalContentAlignment="Center"
                            Command="{Binding AutoFocusIRCommand}"
                            Content="Auto Focus"
                            CornerRadius="10" />

                    </Grid>
                </Border>

                <Border
                    Grid.Row="5"
                    Width="750"
                    Height="150"
                    Margin="20,10,0,0"
                    Padding="20"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="20">

                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">

                        <ScrollViewer
                            Width="700"
                            Height="120"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto">
                            <TextBox
                                x:Name="tcpReplyTextBox"
                                Height="120"
                                Padding="8"
                                AcceptsReturn="True"
                                Background="#F4F4F4"
                                BorderBrush="#888"
                                BorderThickness="1"
                                FontFamily="Consolas"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding TcpReply}"
                                TextWrapping="Wrap" />
                        </ScrollViewer>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>

    </Grid>
</UserControl>
